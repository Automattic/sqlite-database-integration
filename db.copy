<?php

require_once 'DB_PLUGIN_DIR/wp-includes/sqlite/db.php';
add_action( 'init', function() {
	if ( ! function_exists( 'activate_plugin' ) ) {
		require_once ABSPATH . 'wp-admin/includes/plugin.php';
	}
	if ( is_plugin_inactive( 'sqlite/sqlite.php' ) ) {
		activate_plugin( 'sqlite/sqlite.php' );
	}
} );
